<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_default" >

    <EditText
        android:id="@+id/a_login_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入手机号码"
        android:inputType="phone" />

    <EditText
        android:id="@+id/a_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入密码(6到16位非特殊字符)"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/a_login_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录" />

    <Button
        android:id="@+id/a_login_weibo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/com_sina_weibo_sdk_login_button_with_account_text" />

</LinearLayout>