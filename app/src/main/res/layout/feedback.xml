<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp" >

    <LinearLayout style="@style/single_view" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content" />

        <EditText
            android:id="@+id/feedback_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="top"
            android:hint="@string/feedback_content"
            android:lines="4" />
    </LinearLayout>

    <LinearLayout style="@style/single_view" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feedback_anonymous" />

            <TextView
                android:id="@+id/feedback_anonymous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feedback_not_anonymous"
                android:textColor="@color/gray" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/feedback_isanonymous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>