<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/product_add_name"
        style="@style/single_view"
        android:hint="@string/input_product_name" />

    <EditText
        android:id="@+id/product_add_desc"
        style="@style/single_view"
        android:hint="@string/input_product_brief" />

    <ImageView
        android:id="@+id/product_add_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/image_add" />

</LinearLayout>