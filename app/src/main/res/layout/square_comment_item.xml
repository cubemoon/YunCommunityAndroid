<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/square_comment_item_avatar"
        style="@style/avatar_small" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/square_comment_item_name"
            style="@style/text_name" />

        <TextView
            android:id="@+id/square_comment_item_time"
            style="@style/text_time"
            android:layout_below="@+id/square_comment_item_name" />

        <TextView
            android:id="@+id/square_comment_item_content"
            style="@style/text_content"
            android:layout_below="@+id/square_comment_item_time" />

        <Button
            android:id="@+id/square_comment_item_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:text="回复" />
    </RelativeLayout>

</LinearLayout>