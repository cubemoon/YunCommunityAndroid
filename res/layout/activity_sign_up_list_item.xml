<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/activity_sign_up_list_item_avatar"
        android:layout_width="72dp"
        android:layout_height="72dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0" >

        <TextView
            android:id="@+id/activity_sign_up_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/activity_sign_up_list_item_email"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_toRightOf="@+id/activity_sign_up_list_item_name"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/activity_sign_up_list_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_sign_up_list_item_name" />

        <TextView
            android:id="@+id/activity_sign_up_list_item_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_sign_up_list_item_count" />

        <TextView
            android:id="@+id/activity_sign_up_list_item_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/activity_sign_up_list_item_name"
            android:drawableRight="@drawable/ic_call" />

        <TextView
            android:id="@+id/activity_sign_up_list_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</LinearLayout>