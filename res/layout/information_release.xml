<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout style="@style/single_view" >

            <TextView
                style="@style/form_left"
                android:text="@string/title" />

            <EditText
                android:id="@+id/release_title"
                style="@style/form_right"
                android:hint="@string/input_title" />
        </LinearLayout>

        <LinearLayout style="@style/single_view" >

            <TextView
                style="@style/form_left"
                android:text="@string/brief" />

            <EditText
                android:id="@+id/release_desc"
                style="@style/form_right"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="@string/brief_hint"
                android:lines="4"
                android:singleLine="false" />
        </LinearLayout>

        <LinearLayout style="@style/single_view" >

            <TextView
                style="@style/form_left"
                android:text="@string/address_details" />

            <EditText
                android:id="@+id/release_address"
                style="@style/form_right"
                android:enabled="false"
                android:hint="@string/select_address_right_icon"/>

            <Button
                android:id="@+id/release_map"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/ic_map" />
        </LinearLayout>

        <LinearLayout style="@style/single_view" >

            <TextView
                style="@style/form_left"
                android:text="@string/phone" />

            <EditText
                android:id="@+id/release_phone"
                style="@style/form_right"
                android:hint="@string/phone_hint"
                android:inputType="phone" />
        </LinearLayout>

        <LinearLayout style="@style/single_view" >

            <TextView
                style="@style/form_left"
                android:text="@string/tag" />

            <EditText
                android:id="@+id/release_tag"
                style="@style/form_right"
                android:hint="@string/tab_between" />
        </LinearLayout>

        <LinearLayout style="@style/single_view" >

            <ImageView
                android:id="@+id/release_image"
                style="@style/media"
                android:background="@drawable/ic_image" />

            <ImageView
                android:id="@+id/release_voice"
                style="@style/media"
                android:background="@drawable/ic_voice" />

            <ImageView
                android:id="@+id/release_video"
                style="@style/media"
                android:background="@drawable/ic_video" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>